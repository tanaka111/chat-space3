.header
  .notification
    = render :partial => "devise/shared/side_bar"
    .chat-main
      .chat-main__header
        .chat-main__header-clear-fixed
          %ul
            %li.chat-main__header--group-name
              = @group.name
            %li.chat-main__header--group-members
              - @group.users.each do |group_user|
                =group_user.name
            %li
              =link_to "edit","/groups/#{@group.id}/edit", class: "btn"
      .group
        = render partial: "message", collection: @messages
      .footer
        .form
          = form_for [@group, @message] do |f|
            =f.text_field :content, class: "form__message",placeholder: "type a message"
            .form__mask
              = f.label :image, class: "form__mask__image" do
                =fa_icon "picture-o", class: "icon"
                =f.file_field :image, class: "hidden"
            = f.submit "Send", class: "form__submit"



